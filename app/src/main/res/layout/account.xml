<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<TableLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/accountTableLayout1"
		android:layout_margin="10dp">

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent">

			<TextView
				android:layout_height="match_parent"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="wrap_content"
				android:text="Your Name"
				android:layout_weight="9"
				android:gravity="center"
				android:textIsSelectable="true"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="Change"
				android:layout_weight="1"/>

		</TableRow>

	</TableLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="3dp"
		android:layout_width="match_parent"
		android:layout_below="@id/accountTableLayout1"
		android:id="@+id/accountView1"/>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:text="Friends"
		android:layout_below="@id/accountView1"
		android:id="@+id/accountTextView1"
		android:layout_centerHorizontal="true"
		android:padding="10dp"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"
		android:layout_below="@id/accountTextView1"
		android:id="@+id/accountView2"/>

	<ListView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@id/accountView2"/>

</RelativeLayout>

